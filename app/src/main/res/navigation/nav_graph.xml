<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="io.pixfuser.ConnectWalletFragment"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>

    <fragment
        android:id="@+id/SecondFragment"
        android:name="io.pixfuser.TransactionFragment"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_HandleTransactionFragment"
            app:destination="@id/HandleTransactionFragment" />
    </fragment>

    <fragment
        android:id="@+id/HandleTransactionFragment"
        android:name="io.pixfuser.HandleTransactionFragment"
        tools:layout="@layout/fragment_handle_transaction">


    </fragment>
</navigation>